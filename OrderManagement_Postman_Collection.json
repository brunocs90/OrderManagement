	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('auth_token', response.token);",
									"    pm.environment.set('user_id', response.usuario.id);",
									"    pm.environment.set('username', response.usuario.username);",
									"    console.log('Token salvo:', response.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/authentication/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"authentication",
								"login"
							]
						},
						"description": "Autentica o usuário e retorna um token JWT"
					},
					"response": []
				}
			],
			"description": "Endpoints relacionados à autenticação e autorização"
		},
